    <!-- Essential Scripts -->
    
    <!-- Main jQuery -->
    <%- include('./partial/partial_js.ejs') %>

    <script type="text/javascript">
      $("#login_btn").click(function(){

        var email = $("#email").val();
        var password = $("#password").val();

        if (email == '') {
          swal("Login gagal!", "Anda belum mengisi email akun. \nSilahkan cek kembali", "error");
        }else if (password == '') {
          swal("Login gagal!", "Anda belum mengisi passsword akun. \nSilahkan cek kembali", "error");
        }else{

          if (isNaN(email) == true) { //untuk login dg email

            $.ajax({
             'url': '/login',
             'type': 'POST',
             'data': {
              'email'  : email,
              'password'  : password
            },
            'success': function (data) {
              if (data.code == 200) {
                swal("Login Berhasil!", data.message, "success");
                setTimeout(function () {
                  window.location.href = data.url
                }, 2000)
              }else if (data.code == 401) {
                swal("Login gagal!", data.message, "error");
              }
            }
            });
          }else{ //untuk login dg no telepon
            if (email.substring(0,1) == 0) {
              swal("Login gagal!", "Format no telepon salah. Harap menggunakan +62 untuk menggantikan 0 pada awal no telepon", "error");
            }else{
              $.ajax({
               'url': '/login',
               'type': 'POST',
               'data': {
                'email'  : email,
                'password'  : password
              },
              'success': function (data) {
                if (data.code == 200) {
                  swal("Login Berhasil!", data.message, "success");
                  setTimeout(function () {
                    window.location.href = data.url
                  }, 2000)
                }else if (data.code == 401) {
                  swal("Login gagal!", data.message, "error");
                }
              }
              });
            }
          }
        }
      });
      localStorage.setItem("li_id", '');
      localStorage.setItem("li_url", '');
    </script>

